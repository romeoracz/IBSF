---
import { siteConfig } from '../site.config';
---
<footer class="border-t border-gray-200 bg-gray-50">
  <div class="mx-auto max-w-6xl px-4 py-12 sm:px-6">
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      <div>
        <p class="font-semibold text-gray-900">{siteConfig.name}</p>
        <p class="mt-1 text-sm text-gray-600">{siteConfig.tagline}</p>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-900">Contact (NAP)</p>
        <p class="mt-1 text-sm text-gray-600">{siteConfig.address.full}</p>
        <a href={`tel:${siteConfig.phone.replace(/\s/g, '')}`} class="mt-1 block text-sm text-accent-blue hover:underline">{siteConfig.phone}</a>
        <a href={`mailto:${siteConfig.email}`} class="mt-1 block text-sm text-accent-blue hover:underline">{siteConfig.email}</a>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-900">Quick links</p>
        <ul class="mt-1 list-none space-y-1 text-sm">
          <li><a href="/services/damp-condensation-surveys" class="text-gray-600 hover:text-primary">Damp surveys</a></li>
          <li><a href="/services/indoor-air-quality-ventilation" class="text-gray-600 hover:text-primary">Air quality</a></li>
          <li><a href="/contact" class="text-gray-600 hover:text-primary">Contact</a></li>
          <li><a href={siteConfig.bookingUrl} class="text-gray-600 hover:text-primary">Book a visit</a></li>
        </ul>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-900">Areas we serve</p>
        <p class="mt-1 text-sm text-gray-600">Southampton, Winchester, London, Hampshire & South East</p>
      </div>
    </div>
    <p class="mt-8 border-t border-gray-200 pt-8 text-center text-sm text-gray-500">
      Â© {new Date().getFullYear()} {siteConfig.name}. Independent building diagnostics.
    </p>
  </div>
</footer>
