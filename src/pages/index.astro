---
import BaseLayout from '../layouts/BaseLayout.astro';
import { siteConfig } from '../site.config';
import { forensicServices } from '../data/forensicServices';

const metaTitle = `${siteConfig.brandHeadline} | ${siteConfig.tagline} – Southampton, Winchester & London`;
const metaDescription =
  'Independent forensic building investigations. Instrument-led damp, moisture, ventilation and water ingress reports for disputes, insurance and litigation. Southampton, Winchester & London.';

const localBusinessSchema = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  name: siteConfig.name,
  description: siteConfig.description,
  telephone: siteConfig.phone,
  email: siteConfig.email,
  address: {
    '@type': 'PostalAddress',
    streetAddress: siteConfig.address.streetAddress,
    addressLocality: siteConfig.address.addressLocality,
    postalCode: siteConfig.address.postalCode,
    addressRegion: siteConfig.address.addressRegion,
  },
  areaServed: siteConfig.areas.map((a) => ({ '@type': 'City', name: a })),
  url: siteConfig.url,
};
---
<BaseLayout title={metaTitle} description={metaDescription}>
  <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />

  <!-- Hero: two-column, left copy + right authority panel -->
  <section class="border-b border-gray-200 bg-white py-16 sm:py-24 lg:py-28">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <div class="grid gap-12 lg:grid-cols-[1fr,340px] lg:gap-16">
        <div>
          <h1 class="font-serif text-3xl font-bold tracking-tight text-navy sm:text-4xl lg:text-5xl">
            Independent Building Forensics.
          </h1>
          <p class="mt-3 font-serif text-2xl font-semibold text-navy sm:text-3xl">
            Evidence That Stands Up in Court.
          </p>
          <p class="mt-6 max-w-xl text-lg leading-relaxed text-navy-muted">
            We conduct forensic-level investigations into damp, moisture, ventilation failure, water ingress, material degradation and building-related health concerns.
          </p>
          <p class="mt-3 text-lg font-medium text-navy">
            Independent. Instrument-verified. Legally defensible.
          </p>
          <div class="mt-10 flex flex-wrap gap-4">
            <a href="/contact" class="inline-flex rounded bg-navy px-6 py-3 text-base font-semibold text-white no-underline hover:bg-navy-light focus:outline-none focus:ring-2 focus:ring-navy focus:ring-offset-2">
              Commission a Forensic Investigation
            </a>
            <a href="/contact" class="inline-flex rounded border-2 border-navy px-6 py-3 text-base font-semibold text-navy no-underline hover:bg-navy hover:text-white focus:outline-none focus:ring-2 focus:ring-navy focus:ring-offset-2">
              Request Initial Case Review
            </a>
          </div>
        </div>
        <div class="rounded-lg border border-gray-200 bg-gray-50 p-6 lg:p-8">
          <h2 class="text-lg font-semibold text-navy">Why clients instruct us</h2>
          <ul class="mt-4 list-none space-y-3 text-sm text-navy-muted">
            <li class="flex gap-2"><span class="text-primary">•</span> Independent non-remedial consultancy</li>
            <li class="flex gap-2"><span class="text-primary">•</span> Instrument-led diagnostics</li>
            <li class="flex gap-2"><span class="text-primary">•</span> Data-logged environmental analysis</li>
            <li class="flex gap-2"><span class="text-primary">•</span> Reports suitable for insurers & legal proceedings</li>
            <li class="flex gap-2"><span class="text-primary">•</span> Clear causation analysis</li>
          </ul>
        </div>
      </div>
    </div>
    <!-- Credibility strip -->
    <div class="mx-auto mt-14 max-w-6xl px-4 sm:px-6">
      <div class="flex flex-wrap items-center justify-center gap-8 border-t border-gray-200 pt-10 text-center text-sm font-medium text-navy-muted">
        <span>PhD-level scientific expertise</span>
        <span>Professional indemnity insured</span>
        <span>Instrument-verified diagnostics</span>
        <span>Serving Southampton, Winchester & London</span>
      </div>
    </div>
  </section>

  <!-- Instrument-led section -->
  <section class="border-b border-gray-200 bg-gray-50 py-16 sm:py-20" aria-labelledby="instruments-heading">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <h2 id="instruments-heading" class="font-serif text-2xl font-bold text-navy sm:text-3xl">
        Instrument-led scientific investigation
      </h2>
      <p class="mt-4 max-w-3xl text-navy-muted leading-relaxed">
        We do not rely on visual assessment alone. We quantify moisture migration, air exchange and environmental loading. We isolate causation using recorded environmental data.
      </p>
      <ul class="mt-8 grid gap-3 sm:grid-cols-2 lg:grid-cols-3">
        <li class="rounded border border-gray-200 bg-white px-4 py-3 text-sm text-navy">Thermal imaging (FLIR calibrated systems)</li>
        <li class="rounded border border-gray-200 bg-white px-4 py-3 text-sm text-navy">Protimeter moisture mapping</li>
        <li class="rounded border border-gray-200 bg-white px-4 py-3 text-sm text-navy">Hygrothermal data logging</li>
        <li class="rounded border border-gray-200 bg-white px-4 py-3 text-sm text-navy">CO₂ & ventilation monitoring</li>
        <li class="rounded border border-gray-200 bg-white px-4 py-3 text-sm text-navy">VOC detection & air sampling</li>
        <li class="rounded border border-gray-200 bg-white px-4 py-3 text-sm text-navy">Surface & core moisture measurement</li>
        <li class="rounded border border-gray-200 bg-white px-4 py-3 text-sm text-navy">Psychrometric analysis & dew point modelling</li>
        <li class="rounded border border-gray-200 bg-white px-4 py-3 text-sm text-navy">Building envelope thermal bridging analysis</li>
      </ul>
      <p class="mt-6 text-sm font-medium text-navy">
        Evidence. Quantification. Causation. Data integrity. Repeatable measurements.
      </p>
    </div>
  </section>

  <!-- What our reports deliver -->
  <section class="border-b border-gray-200 py-16 sm:py-20" aria-labelledby="reports-heading">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <h2 id="reports-heading" class="font-serif text-2xl font-bold text-navy sm:text-3xl">
        What our reports deliver
      </h2>
      <p class="mt-4 max-w-3xl text-navy-muted leading-relaxed">
        Designed for dispute resolution, insurance clarity, developer accountability and legal robustness.
      </p>
      <ul class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <li class="border-l-4 border-primary bg-white py-2 pl-4 text-navy">Causation analysis</li>
        <li class="border-l-4 border-primary bg-white py-2 pl-4 text-navy">Photographic & thermal evidence</li>
        <li class="border-l-4 border-primary bg-white py-2 pl-4 text-navy">Moisture maps</li>
        <li class="border-l-4 border-primary bg-white py-2 pl-4 text-navy">Environmental data logs</li>
        <li class="border-l-4 border-primary bg-white py-2 pl-4 text-navy">Ventilation performance analysis</li>
        <li class="border-l-4 border-primary bg-white py-2 pl-4 text-navy">Liability commentary where appropriate</li>
        <li class="border-l-4 border-primary bg-white py-2 pl-4 text-navy">Clear remedial guidance</li>
      </ul>
    </div>
  </section>

  <!-- Services -->
  <section class="border-b border-gray-200 bg-gray-50 py-16 sm:py-20" aria-labelledby="services-heading">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <h2 id="services-heading" class="font-serif text-2xl font-bold text-navy sm:text-3xl">
        Forensic investigations we conduct
      </h2>
      <p class="mt-2 text-navy-muted">
        Independent building forensics, damp survey Southampton, damp survey Winchester, damp survey London. Forensic damp investigation and building defect investigation.
      </p>
      <ul class="mt-10 grid gap-4 sm:grid-cols-2">
        {forensicServices.map((s) => (
          <li>
            <a href={s.href} class="block rounded-lg border border-gray-200 bg-white p-6 no-underline transition hover:border-navy hover:shadow-md focus:outline-none focus:ring-2 focus:ring-navy focus:ring-offset-2">
              <h3 class="font-semibold text-navy">{s.title}</h3>
              <p class="mt-1 text-sm text-navy-muted">{s.shortDescription}</p>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </section>

  <!-- Pricing psychology (no prices) -->
  <section class="border-b border-gray-200 py-12 sm:py-16">
    <div class="mx-auto max-w-3xl px-4 text-center sm:px-6">
      <p class="text-lg text-navy-muted leading-relaxed">
        Our work is commissioned for complex or high-value cases where clarity, independence and defensible conclusions are critical. We encourage an initial case review to discuss your situation.
      </p>
      <a href="/contact" class="mt-6 inline-flex rounded bg-navy px-6 py-3 font-semibold text-white no-underline hover:bg-navy-light">
        Request initial case review
      </a>
    </div>
  </section>

  <!-- Locations -->
  <section class="border-b border-gray-200 bg-gray-50 py-16 sm:py-20" aria-labelledby="locations-heading">
    <div class="mx-auto max-w-6xl px-4 sm:px-6">
      <h2 id="locations-heading" class="font-serif text-2xl font-bold text-navy sm:text-3xl">
        Forensic building investigations by location
      </h2>
      <p class="mt-2 text-navy-muted">
        Water ingress investigation London, condensation survey Hampshire, indoor air quality testing London, ventilation audit Winchester, moisture mapping London. Independent building expert London.
      </p>
      <ul class="mt-8 flex flex-wrap gap-4">
        <li><a href="/southampton" class="rounded border border-gray-300 bg-white px-5 py-3 font-medium text-navy no-underline hover:border-navy hover:bg-navy hover:text-white">Southampton</a></li>
        <li><a href="/winchester" class="rounded border border-gray-300 bg-white px-5 py-3 font-medium text-navy no-underline hover:border-navy hover:bg-navy hover:text-white">Winchester</a></li>
        <li><a href="/london" class="rounded border border-gray-300 bg-white px-5 py-3 font-medium text-navy no-underline hover:border-navy hover:bg-navy hover:text-white">London</a></li>
      </ul>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="bg-navy py-14 sm:py-18">
    <div class="mx-auto max-w-6xl px-4 text-center sm:px-6">
      <h2 class="font-serif text-2xl font-bold text-white sm:text-3xl">
        Commission a forensic investigation
      </h2>
      <p class="mt-2 text-gray-300">
        Request an initial case review. We respond to serious enquiries promptly.
      </p>
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <a href="/contact" class="inline-flex rounded bg-white px-6 py-3 font-semibold text-navy no-underline hover:bg-gray-100">
          Commission Investigation
        </a>
        <a href="/contact" class="inline-flex rounded border-2 border-white px-6 py-3 font-semibold text-white no-underline hover:bg-white hover:text-navy">
          Request Case Review
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
