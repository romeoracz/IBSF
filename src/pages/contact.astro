---
import BaseLayout from '../layouts/BaseLayout.astro';
import { siteConfig } from '../site.config';
import Icon from '../components/Icon.astro';
---
<BaseLayout
  title={`Contact â€“ ${siteConfig.name} | Book a Diagnostic Visit`}
  description="Contact Independent Building Science & Forensics. Book a damp survey, building inspection or air quality test in Southampton, Winchester or London."
>
  <div class="mx-auto max-w-6xl px-4 py-12 sm:px-6">
    <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
      Contact us
    </h1>
    <p class="mt-2 text-lg text-gray-600">
      Book a diagnostic visit, request a report or ask a question. We aim to respond quickly.
    </p>

    <div class="mt-10 grid gap-10 lg:grid-cols-2">
      <section class="space-y-6" aria-labelledby="contact-options-heading">
        <h2 id="contact-options-heading" class="text-xl font-semibold text-gray-900">Ways to get in touch</h2>

        <a href={siteConfig.bookingUrl} class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 no-underline shadow-sm hover:border-primary hover:shadow-md">
          <span class="flex h-12 w-12 shrink-0 items-center justify-center rounded-lg bg-primary text-white">
            <span class="text-xl font-bold">B</span>
          </span>
          <div>
            <span class="font-semibold text-gray-900">Book online</span>
            <p class="text-sm text-gray-600">Choose a slot for a survey or consultation</p>
          </div>
        </a>

        <a href={`tel:${siteConfig.phone.replace(/\s/g, '')}`} class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 no-underline shadow-sm hover:border-primary hover:shadow-md">
          <span class="flex h-12 w-12 shrink-0 items-center justify-center rounded-lg bg-accent-blue-light text-accent-blue">
            <Icon name="phone" class="h-6 w-6" />
          </span>
          <div>
            <span class="font-semibold text-gray-900">Call</span>
            <p class="text-sm text-gray-600">{siteConfig.phone}</p>
          </div>
        </a>

        <a href={siteConfig.whatsapp} target="_blank" rel="noopener noreferrer" class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 no-underline shadow-sm hover:border-green-500 hover:shadow-md">
          <span class="flex h-12 w-12 shrink-0 items-center justify-center rounded-lg bg-green-100 text-green-700">
            <Icon name="chat-bubble" class="h-6 w-6" />
          </span>
          <div>
            <span class="font-semibold text-gray-900">WhatsApp</span>
            <p class="text-sm text-gray-600">Quick message outside office hours</p>
          </div>
        </a>

        <a href={`mailto:${siteConfig.email}`} class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 no-underline shadow-sm hover:border-primary hover:shadow-md">
          <span class="flex h-12 w-12 shrink-0 items-center justify-center rounded-lg bg-gray-100 text-gray-700">
            @
          </span>
          <div>
            <span class="font-semibold text-gray-900">Email</span>
            <p class="text-sm text-gray-600">{siteConfig.email}</p>
          </div>
        </a>
      </section>

      <section aria-labelledby="form-heading">
        <h2 id="form-heading" class="text-xl font-semibold text-gray-900">Send a message</h2>
        <form action={siteConfig.formEndpoint} method="POST" class="mt-4 space-y-4">
          <input type="text" name="_gotcha" class="hidden" aria-hidden="true" tabindex={-1} autocomplete="off" />
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
            <input type="text" id="name" name="name" required class="mt-1 block w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary focus:ring-1 focus:ring-primary" />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
            <input type="email" id="email" name="email" required class="mt-1 block w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary focus:ring-1 focus:ring-primary" />
          </div>
          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700">Phone</label>
            <input type="tel" id="phone" name="phone" class="mt-1 block w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary focus:ring-1 focus:ring-primary" />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
            <textarea id="message" name="message" rows={4} required class="mt-1 block w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary focus:ring-1 focus:ring-primary"></textarea>
          </div>
          <button type="submit" class="w-full rounded-lg bg-primary px-6 py-3 font-semibold text-white hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 sm:w-auto">
            Send message
          </button>
        </form>
        <p class="mt-2 text-sm text-gray-500">We typically respond within one working day.</p>
      </section>
    </div>

    <section class="mt-12" aria-labelledby="map-heading">
      <h2 id="map-heading" class="text-xl font-semibold text-gray-900">Service area</h2>
      <p class="mt-1 text-gray-600">We serve Southampton, Winchester, London and the South East.</p>
      <div class="mt-4 aspect-video w-full overflow-hidden rounded-xl bg-gray-200">
        <iframe
          src={siteConfig.mapEmbedUrl}
          width="100%"
          height="100%"
          style="border:0;"
          allowFullScreen
          loading="lazy"
          referrerPolicy="no-referrer-when-downgrade"
          title="Service area map"
        />
      </div>
    </section>

    <section class="mt-10 rounded-xl border border-gray-200 bg-gray-50 p-6">
      <h2 class="text-lg font-semibold text-gray-900">Book a diagnostic visit</h2>
      <p class="mt-1 text-gray-700">Use our online calendar to choose an appointment slot for a survey or consultation.</p>
      <a href={siteConfig.bookingUrl} class="mt-4 inline-flex rounded-lg bg-primary px-6 py-3 font-semibold text-white no-underline hover:bg-primary-hover">
        Open booking calendar
      </a>
    </section>
  </div>
</BaseLayout>
