---
import BaseLayout from '../layouts/BaseLayout.astro';
import { siteConfig } from '../site.config';
import Icon from '../components/Icon.astro';
---
<BaseLayout
  title={`Contact â€“ ${siteConfig.name} | Commission Investigation or Request Case Review`}
  description="Contact Independent Building Forensics. Commission a forensic investigation or request an initial case review. Southampton, Winchester & London."
>
  <div class="mx-auto max-w-6xl px-4 py-12 sm:px-6">
    <h1 class="font-serif text-3xl font-bold tracking-tight text-navy sm:text-4xl">
      Contact
    </h1>
    <p class="mt-2 text-lg text-navy-muted">
      Commission a forensic investigation or request an initial case review. We respond to serious enquiries promptly.
    </p>

    <div class="mt-10 grid gap-10 lg:grid-cols-2">
      <section class="space-y-6" aria-labelledby="contact-options-heading">
        <h2 id="contact-options-heading" class="text-xl font-semibold text-navy">Ways to instruct</h2>

        <a href="/contact#form-heading" class="flex items-center gap-4 rounded-lg border border-gray-200 bg-white p-4 no-underline transition hover:border-navy hover:shadow">
          <span class="flex h-12 w-12 shrink-0 items-center justify-center rounded bg-navy text-white font-semibold">C</span>
          <div>
            <span class="font-semibold text-navy">Commission investigation</span>
            <p class="text-sm text-navy-muted">Submit your case details below</p>
          </div>
        </a>

        <a href="/contact#form-heading" class="flex items-center gap-4 rounded-lg border border-gray-200 bg-white p-4 no-underline transition hover:border-navy hover:shadow">
          <span class="flex h-12 w-12 shrink-0 items-center justify-center rounded border-2 border-navy text-navy font-semibold">R</span>
          <div>
            <span class="font-semibold text-navy">Request initial case review</span>
            <p class="text-sm text-navy-muted">Brief description and we will respond</p>
          </div>
        </a>

        <a href={`tel:${siteConfig.phone.replace(/\s/g, '')}`} class="flex items-center gap-4 rounded-lg border border-gray-200 bg-white p-4 no-underline transition hover:border-navy hover:shadow">
          <span class="flex h-12 w-12 shrink-0 items-center justify-center rounded bg-gray-100 text-navy">
            <Icon name="phone" class="h-6 w-6" />
          </span>
          <div>
            <span class="font-semibold text-navy">Call</span>
            <p class="text-sm text-navy-muted">{siteConfig.phone}</p>
          </div>
        </a>

        <a href={siteConfig.whatsapp} target="_blank" rel="noopener noreferrer" class="flex items-center gap-4 rounded-lg border border-gray-200 bg-white p-4 no-underline transition hover:border-navy hover:shadow">
          <span class="flex h-12 w-12 shrink-0 items-center justify-center rounded bg-green-100 text-green-800">
            <Icon name="chat-bubble" class="h-6 w-6" />
          </span>
          <div>
            <span class="font-semibold text-navy">WhatsApp</span>
            <p class="text-sm text-navy-muted">Message for initial enquiry</p>
          </div>
        </a>

        <a href={`mailto:${siteConfig.email}`} class="flex items-center gap-4 rounded-lg border border-gray-200 bg-white p-4 no-underline transition hover:border-navy hover:shadow">
          <span class="flex h-12 w-12 shrink-0 items-center justify-center rounded bg-gray-100 text-navy">@</span>
          <div>
            <span class="font-semibold text-navy">Email</span>
            <p class="text-sm text-navy-muted">{siteConfig.email}</p>
          </div>
        </a>
      </section>

      <section id="form-heading" aria-labelledby="form-title">
        <h2 id="form-title" class="text-xl font-semibold text-navy">Send a message</h2>
        <form action={siteConfig.formEndpoint} method="POST" class="mt-4 space-y-4">
          <input type="text" name="_gotcha" class="hidden" aria-hidden="true" tabindex={-1} autocomplete="off" />
          <input type="hidden" name="_subject" value="Forensic investigation enquiry" />
          <div>
            <label for="name" class="block text-sm font-medium text-navy">Name</label>
            <input type="text" id="name" name="name" required class="mt-1 block w-full rounded border border-gray-300 px-4 py-2 text-navy focus:border-navy focus:ring-1 focus:ring-navy" />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-navy">Email</label>
            <input type="email" id="email" name="email" required class="mt-1 block w-full rounded border border-gray-300 px-4 py-2 text-navy focus:border-navy focus:ring-1 focus:ring-navy" />
          </div>
          <div>
            <label for="phone" class="block text-sm font-medium text-navy">Phone</label>
            <input type="tel" id="phone" name="phone" class="mt-1 block w-full rounded border border-gray-300 px-4 py-2 text-navy focus:border-navy focus:ring-1 focus:ring-navy" />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-navy">Message / case summary</label>
            <textarea id="message" name="message" rows={4} required placeholder="Brief description of the case or requirement..." class="mt-1 block w-full rounded border border-gray-300 px-4 py-2 text-navy focus:border-navy focus:ring-1 focus:ring-navy"></textarea>
          </div>
          <button type="submit" class="rounded bg-navy px-6 py-3 font-semibold text-white hover:bg-navy-light focus:outline-none focus:ring-2 focus:ring-navy focus:ring-offset-2">
            Send message
          </button>
        </form>
        <p class="mt-2 text-sm text-navy-muted">We typically respond within one working day.</p>
      </section>
    </div>

    <section class="mt-12" aria-labelledby="map-heading">
      <h2 id="map-heading" class="text-xl font-semibold text-navy">Address & service area</h2>
      <p class="mt-1 text-navy-muted">
        <strong>{siteConfig.name}</strong><br />
        {siteConfig.address.full}<br />
        Southampton, Winchester, London & South East.
      </p>
      <div class="mt-4 aspect-video w-full overflow-hidden rounded-lg bg-gray-200">
        <iframe
          src={siteConfig.mapEmbedUrl}
          width="100%"
          height="100%"
          style="border:0;"
          allowFullScreen
          loading="lazy"
          referrerPolicy="no-referrer-when-downgrade"
          title="Service area map"
        />
      </div>
    </section>
  </div>
</BaseLayout>
